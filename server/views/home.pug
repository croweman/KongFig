doctype html
html(lang='en')

  include includes/head.pug

  body

    include includes/nav-bar.pug

    // Main jumbotron for a primary marketing message or call to action
    .jumbotron
      .container
        h2.display-6 elency-config

    .container
      div.row
        div.col-md-6
          h3 Favourite Apps
          each app in favouriteApps
            - name = app.appName + ' (' + app.appId + ')'
            div
              a(href=app.url)= name

        div.col-md-6
          h3 Favourite Teams
          each team in favouriteTeams
            - name = team.teamName + ' (' + team.teamId + ')'
            div
              a(href=team.url)= name

      include includes/footer.pug

    include includes/scripts.pug

